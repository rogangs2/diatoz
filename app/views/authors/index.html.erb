<turbo-frame id="dashboard-body">
  <div class="flex space-x-2">
    <% @authors.each do |author| %>
      <article class="rounded-lg border border-gray-100 bg-white p-4 shadow-sm transition hover:shadow-lg sm:p-6">

        <h3 class="mt-0.5 text-lg font-medium text-gray-900">
          <%= author.name %>
        </h3>

        <p class="mt-2 line-clamp-3 text-sm/relaxed text-gray-500">
          <%= author.email %>
        </p>

        <a class="group mt-4 inline-flex items-center gap-1 text-sm font-medium text-blue-600">
          <%=  button_to "view Author", author_path(id: author.id), method: :get %>
          <span aria-hidden="true" class="block transition-all group-hover:ms-0.5 rtl:rotate-180">&rarr;</span>
        </a>
      </article>
    <% end %>
  </div>
</turbo-frame>