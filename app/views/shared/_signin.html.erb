<div class="container mx-auto m-40 flex justify-center">
  <div class="overflow-hidden bg-white rounded-lg shadow-md dark:bg-gray-800">
    <div class="px-6 py-4">
      <p class="mt-1 text-center text-gray-500 dark:text-gray-400"></p>
      <%= form_with(url: sessions_path, scope: :session, local: true) do |form| %>
        <div class="w-full mt-4">
          <%= form.text_field :email, class: "block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-500 bg-white border rounded-lg dark:bg-gray-800 dark:border-gray-600 dark:placeholder-gray-400 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring focus:ring-blue-300", placeholder: "Email Address" %>
        </div>
        <div class="w-full mt-4">
          <%= form.text_field :password, class: "block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-500 bg-white border rounded-lg dark:bg-gray-800 dark:border-gray-600 dark:placeholder-gray-400 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring focus:ring-blue-300", placeholder: "Password"  %>
        </div>
        <%= form.hidden_field :person, value: @person_type%>
        <div class="flex items-center justify-between mt-4">
          <% if current_page?(subscriber_login_path) %>
            <%= link_to "sign up?", new_subscriber_path, method: :get, class: "text-sm text-gray-600 dark:text-gray-200 hover:text-gray-500" %>
          <% else %>
            <%= link_to "sign up?", new_subscriber_path, method: :get, class: "text-sm text-gray-600 dark:text-gray-200 hover:text-gray-500" %>
          <% end %>
          <%= form.submit "Log in", class: "px-6 py-2 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-blue-500 rounded-lg hover:bg-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50"  %>
        </div>
      <% end %>
    </div>
  </div>
</div>