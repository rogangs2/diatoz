<turbo-frame id="dashboard-body">
  <%#  create_blog_button %>
  <% if session[:user_type] == 'author'%>
    <header aria-label="Site Header" class="flex spae-y-2 border-b">
      <div class="mx-auto flex h-16 max-w-screen-2xl items-center justify-between sm:px-6 lg:px-8">
        <div class="flex items-center justify-center gap-4">
            <span class="flex items-center ustify-center p-4 inline-block h-10 w-32 rounded-lg bg-gray-200">
              <%= link_to "Create Blog", new_blog_path, method: :get, data: {"turbo-frame" => "dashboard-body" }  %>
            </span>
        </div>
      </div>
    </header>
  <% end %>

  <%#  display_blogs %>
  <div class="flex space-x-2">
    <% @blogs.each do |blog| %>
      <article class="rounded-lg border border-gray-100 bg-white p-4 shadow-sm transition hover:shadow-lg sm:p-6">

        <h3 class="mt-0.5 text-lg font-medium text-gray-900">
          <%= blog.name %>
        </h3>

        <p class="mt-2 line-clamp-3 text-sm/relaxed text-gray-500">
          <%= blog.description %>
        </p>

        <a class="group mt-4 inline-flex items-center gap-1 text-sm font-medium text-blue-600">
          <%=  button_to "view posts", blog_posts_path(blog_id: blog.id), method: :get %>
          <span aria-hidden="true" class="block transition-all group-hover:ms-0.5 rtl:rotate-180">&rarr;</span>
        </a>
      </article>
    <% end %>
  </div>
</turbo-frame>
