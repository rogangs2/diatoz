<%= form_with model: blog do |form| %>
  <div class="space-y-4">
    <div>
      <label for="Blog Name" class="block text-sm text-gray-500 dark:text-gray-300 space-y-4">Blog name</label>
      <%= form.text_field :name, { class: "w-full rounded-lg border-gray-200 p-3 text-sm"} %>
    </div>

    <div>
      <label for="Description" class="block text-sm text-gray-500 dark:text-gray-300 space-y-4">Description</label>
      <%= form.text_area :description, { class: "w-full rounded-lg border-gray-200 p-3 text-sm"} %><br>
    </div>

    <div class="flex flex-row justify-between">
      <%= form.submit 'Submit', :class => "flex inline-block w-full rounded-lg bg-black px-5 py-3 font-medium text-white sm:w-auto" %>
      <% if blog.new_record? %>
        <%= link_to 'Back', blogs_path, method: :get ,:class => "flex inline-block w-full rounded-lg bg-black px-5 py-3 font-medium text-white sm:w-auto" %>
      <% else %>
        <%= link_to 'Back', blog_posts_path(blog_id: blog.id), method: :get ,:class => "flex inline-block w-full rounded-lg bg-black px-5 py-3 font-medium text-white sm:w-auto" %>
      <% end %>
    </div>
  </div>
<% end %>
